<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>s'inscrire</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="container mt-5">
            {{form_start(form, {'attr': {'class': 'row justify-content-center'}} ) }}
                <div class="col-md-6 col-sm-12 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h3 mb-3 fw-bold text-center">S'inscrire</h1>

                            <div class="form-floating mb-3">
                                {{form_widget(form.username)}}
                                {{form_label(form.username)}}
                            </div>

                            <div class="form-floating mb-3">
                                {{form_widget(form.password.first)}}
                                {{form_label(form.password.first)}}
                            </div>

                            <div class="form-floating mb-3">
                                {{form_widget(form.password.second)}}
                                {{form_label(form.password.second)}}
                            </div>

                            {{form_widget(form.submit)}}

                            <p class="my-3 text-muted"> Vous avez déja un compte ? <a href="{{path('login_index')}}" class="text-decoration-none">Se connecter </a></p>
                        </div>
                    </div>
                </div>
            {{form_end(form)}}
        </div>
    </body>
</html>
